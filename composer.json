{
    "name": "genesis-reborn/game",
    "description": "Browser strategy game refactored to PSR-4 architecture",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-pdo": "*",
        "symfony/yaml": "^7.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.65",
        "phpstan/phpstan": "^1.12",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs": "php ./vendor/bin/php-cs-fixer fix --dry-run --diff --using-cache=no",
        "stan": "phpstan analyse --configuration=phpstan.neon --memory-limit=512M",
        "db:create": "php tools/db/create-database.php",
        "db:migrate": "php tools/db/migrate.php",
        "cs:fix": "php ./vendor/bin/php-cs-fixer fix --diff"
    },
    "config": {
        "sort-packages": true
    }
}
